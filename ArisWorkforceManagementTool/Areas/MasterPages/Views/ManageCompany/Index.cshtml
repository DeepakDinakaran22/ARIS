<div class="col-12 col-sm-12">
    <div class="card card-warning card-outline card-tabs">
        <div class="card-header p-0 pt-1 border-bottom-0">
            <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="custom-tabs-clients-home-tab" data-toggle="pill" href="#custom-tabs-clients-home" role="tab" aria-controls="custom-tabs-clients-home" aria-selected="true">Manage Clients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="custom-tabs-clients-upload-tab" data-toggle="pill" href="#custom-tabs-clients-upload" role="tab" aria-controls="custom-tabs-clients-upload" aria-selected="false">Manage Client Uploads</a>
                </li>

            </ul>

        </div>
        <div class="card-body">
            <div class="tab-content" id="custom-tabs-three-tabContent">
                <div class="tab-pane fade show active" id="custom-tabs-clients-home" role="tabpanel" aria-labelledby="custom-tabs-clients-home-tab">
                    @*<div class="content-header">
                            <div class="container-fluid">
                                <div class="row mb-2">
                                    <div class="col-sm-6">
                                        <h1 class="m-0 text-dark">Manage Client</h1>
                                    </div>
                                    <div class="col-sm-6">
                                        <ol class="breadcrumb float-sm-right">
                                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                                            <li class="breadcrumb-item active">Manage Clients</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>
                        </div>*@
                    <section class="content">
                        <div class="container-fluid">
                            <div class="row">
                                <!-- left column -->
                                <div class="col-md-12">
                                    <!-- general form elements -->
                                    <div class="card card-primary">
                                        <div class="card-header">
                                            <h3 class="card-title">Client  Details	</h3>
                                        </div>
                                        <!-- /.card-header -->
                                        <!-- form start -->

                                        <form role="form" id="companyForm">

                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label for="txtCompanyName">Client Name <span class="text-red text-bold">*</span></label>
                                                            <input type="text" name="companyName" required class="form-control" id="txtCompanyName" placeholder="Client Name">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label for="txtCompanyName">Client Location <span class="text-red text-bold">*</span></label>
                                                            <input type="text" name="companyLocation" required class="form-control" id="txtCompanyLocation" placeholder="Clent Location Name">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Expiry Date <span class="text-bold text-red">*</span></label>
                                                            <input type="text" class="form-control date" id="dpCompanyExpiry" placeholder="Select Expiry Date">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Client Phone <span class="text-red text-bold">*</span></label>
                                                            <input type="number" class="form-control date" id="txtCompanyPhone" placeholder="Phone Number">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Client Email <span class="text-red text-bold">*</span></label>
                                                            <input type="text" class="form-control date" id="txtCompanyEmail" placeholder="Email Address">
                                                        </div>
                                                    </div>

                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Status <span class="text-red text-bold">*</span></label>
                                                            <select class="form-control select2bs4" id="ddlStatus" required style="width: 100%;">
                                                                <option value="-1" selected="selected">Select</option>
                                                                <option value="1">Active</option>
                                                                <option value="0">Inactive</option>


                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label for="txtCompanyServices">Services To The Client</label>
                                                            <textarea class="form-control" rows="2" id="txtCompanyServices"></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- /.card-body -->

                                            <div class="card-footer" style="text-align:right">
                                                <button type="button" id="btnDelete" hidden class="btn btn-danger btn-sm">Delete</button>
                                                <button type="reset" id="btnReset" onclick="ResetClientFields()" class="btn btn-primary btn-sm">Reset</button>
                                                <button type="button" id="btnUpdate" onclick="UpdateRequest()" class="btn btn-warning btn-sm">Update</button>
                                                <button type="button" id="btnSubmit" onclick="SubmitRequest()" class="btn btn-success btn-sm">Submit</button>
                                            </div>
                                        </form>

                                    </div>


                                </div>
                                <!--/.col (left) -->
                                <!-- right column -->
                                <div class="col-md-12">

                                    <!-- general form elements disabled -->
                                    <div class="card card-warning">
                                        <div class="card-header">
                                            <h3 class="card-title">Client List</h3>
                                        </div>
                                        <!-- /.card-header -->
                                        <div class="card-body">
                                            <form role="form">
                                                <div class="row">
                                                    <div class="col-sm-12">
                                                        <div class="card-body table-responsive p-0">
                                                            <table class="table table-bordered table-head-fixed text-nowrap table-hover table-striped" id="tblCompanies"> </table>
                                                        </div>
                                                    </div>

                                                </div>


                                            </form>
                                        </div>
                                        <!-- /.card-body -->
                                    </div>






                                </div>
                                <!--/.col (right) -->
                            </div>
                            <!-- /.row -->
                        </div><!-- /.container-fluid -->
                    </section>
                </div>
                <div class="tab-pane fade" id="custom-tabs-clients-upload" role="tabpanel" aria-labelledby="custom-tabs-clients-upload-tab">
                    <section class="content">
                        <div class="container-fluid">
                            <div class="row">
                                <!-- left column -->
                                <div class="col-md-12">
                                    <!-- general form elements -->
                                    <div class="card card-primary">
                                        <div class="card-header">
                                            <h3 class="card-title">Client  Upload Details	</h3>
                                        </div>
                                        <!-- /.card-header -->
                                        <!-- form start -->

                                        <form role="form" id="companyFormUploads">

                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Client</label>
                                                            <select class="form-control select2bs4" id="ddlCompany" style="width: 100%;">
                                                            </select>

                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                            <!-- /.card-body -->
                                            @*<div class="card-footer" style="text-align:right">
                                                    <button type="button" id="btnUploadList" onclick="GetUploads()" class="btn btn-success btn-sm form-control">Submit</button>

                                                </div>*@
                                        </form>

                                    </div>


                                </div>
                                <!--/.col (left) -->
                                <!-- right column -->
                                <div class="col-md-12" id="div_clientUploads">

                                    <!-- general form elements disabled -->
                                    <div class="card card-warning">
                                        <div class="card-header">
                                            <h3 class="card-title">Client Uploads</h3>
                                        </div>
                                        <!-- /.card-header -->
                                        <div class="card-body">
                                            <form role="form">
                                                <div class="row">
                                                    <div class="col-sm-12">
                                                        <div class="card-body table-responsive p-0">
                                                            <table class="table text-nowrap" style="width:100%" id="tblUploadDocs"> </table>
                                                        </div>
                                                    </div>

                                                </div>


                                            </form>
                                        </div>

                                        <!-- /.card-body -->
                                        <!--<div class="card-footer">
                                            <button type="button" id="btnAddRow" class="btn btn-success">Add</button>
                                        </div>-->
                                    </div>






                                </div>
                                <!--/.col (right) -->
                            </div>
                            <!-- /.row -->
                        </div><!-- /.container-fluid -->
                    </section>
                </div>
            </div>
        </div>
        <!-- /.card -->
    </div>
</div>

@* Message Modal *@
<div class="modal fade" id="alert-modal">
    <div class="modal-dialog">
        <div class="modal-content alert-success">
            <div class="modal-header">
                <h4 class="modal-title">Success Modal</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p></p>
            </div>
            <div class="modal-footer justify-content">
                <button type="button" class="btn btn-outline-light" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<div class="modal fade bd-loader-modal-lg" data-backdrop="static" data-keyboard="false" id="modal-Loader" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" style="width: 48px">
            <span class="fa fa-spinner fa-spin fa-3x"></span>
        </div>
    </div>
</div>



