<script>

    var row;
    var table;
    var companyId;
    $(document).ready(function () {
        $("#btnUpdate").hide();
        $("#btnSubmit").show();
        //showAlert({ title: "SUCCESS!", message: 'Action has been completed successfully!', type: "SUCCESS" });
        GetAllCompanies();

        $("#txtCompanyName").focusout(function () {
            CheckNameExists();
        });

        $('#tblCompanies').on('click', 'td.edit', function (e) {
            e.preventDefault();
            $("#txtCompanyName").val(table.row(this).data()['companyName']);
            $("#txtCompanyName").attr("disabled", "disabled");
            $("#txtCompanyDesc").val(table.row(this).data()['companyDescription']);
            if (table.row(this).data()['isActive'] == 1) {
                $("#ddlStatus").val(1);
            }
            else {
                $("#ddlStatus").val(0);
            }
            companyId = table.row(this).data()['companyId'];

            $("#btnUpdate").show();
            $("#btnSubmit").hide();
        });

        //validation


        //ready end
    });
    function CheckNameExists() {
        try {

            $.ajax({
                type: "GET",
                url: "/MasterPages/ManageCompany/IsCompanyNameExists",
                data: { CompanyName: $("#txtCompanyName").val() },
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    if (response != null) {
                        if (response.value == true) {
                            $('#txtCompanyName').css('border-color', 'red');
                            showAlert({ title: "Warning!", message: 'Company Name is already added!', type: "WARNING" });
                        }
                        else {
                            $('#txtCompanyName').css('border-color', '');

                        }

                    } else {
                        alert("Something went wrong");
                    }
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        }
        catch (err) {

        }
    }
    function SubmitRequest() {
        var isValid = true;
        var companyName = $("#txtCompanyName").val();
        var companyDesc = $("#txtCompanyDesc").val();
        var isActive = $("#ddlStatus option:selected").val();

        var data = {
            CompanyName: companyName,
            CompanyDescription: companyDesc,
            IsActive: isActive
        };

        if ($('#txtCompanyName').val() == '') {
            $('#txtCompanyName').css('border-color', 'red');
            isValid = false;
        }
        else if ($("#ddlStatus").val() == -1) {
            $('#ddlStatus').css('border-color', 'red');
            isValid = false;
        }

        if (isValid) {

            callAjax('POST', '/MasterPages/ManageCompany/SubmitRequest', data);
            GetAllCompanies();
            Reset();
        }
        else {

        }



    }
    function UpdateRequest() {
        var isValid = true;

        try {
            var companyName = $("#txtCompanyName").val();
            var companyDesc = $("#txtCompanyDesc").val();
            var isActive = $("#ddlStatus option:selected").val();
            alert(companyId);
            var data = {
                CompanyName: companyName,
                CompanyDescription: companyDesc,
                IsActive: isActive,
                companyId: companyId
            };


            if ($('#txtCompanyName').val() == '') {
                $('#txtCompanyName').css('border-color', 'red');
                isValid = false;
            }
            else if ($("#ddlStatus").val() == -1) {
                $('#ddlStatus').css('border-color', 'red');
                isValid = false;
            }

            if (isValid) {

                callAjax('POST', '/MasterPages/ManageCompany/UpdateRequest', data);
                GetAllCompanies();
                Reset();
            }

        }
        catch (err) {
            console.log(err);
        }
    }
    //Fetch all data
    function GetAllCompanies() {
        $.ajax({
            type: "GET",
            url: "/MasterPages/ManageCompany/GetAllCompanies",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            beforeSend: function () { // Before we send the request, remove the .hidden class from the spinner and default to inline-block.
               // $('#modal-Loader').modal('show');
            },
            success: function (response) {
                if (response != null) {
                    populateCompanies(response);
                     // $('#modal-Loader').modal('hide');
                } else {
                    alert("Something went wrong");
                }
            },
            complete: function () { // Set our complete callback, adding the .hidden class and hiding the spinner.
                                    //  $('#modal-Loader').modal('hide');

            },
            failure: function (response) {
                alert(response.responseText);
            },
            error: function (response) {
                alert(response.responseText);
            }
        });
    }
    function populateCompanies(response) {
        table = $('#tblCompanies').DataTable(
            {
                bLengthChange: true,
                bFilter: true,
                bSort: true,
                bPaginate: true,
                data: response,
                scrollY: false,
                select: true,
                pageLength: 5,
                destroy: true,
                order: [[0, "desc"]],
                //columnDefs: [ { "visible": false,  "targets": [ 0 ] }],
                columns: [
                    {
                        data: 'companyId', title: 'Company ID', visible: false,
                    },
                    {
                        data: 'companyName', title: 'Company Name'
                    },
                    {
                        data: 'companyDescription', title: 'Company Description'
                    },
                    {
                        data: 'isActive', title: 'Status',
                        render: function (data) {
                            if (data == 1) {
                                return 'Active';
                            }
                            else {
                                return 'Inactive';
                            }
                        }

                    },
                    {
                        data: null,
                        title: 'View',
                        class: 'edit',
                        defaultContent: '<button type="button" class="btn btn-success"><i class="fas fa-edit"></i></button>',
                        orderable: false
                    }
                ]
            });

    }

    function Reset() {
        try {
            $("#txtCompanyName").val('');
            $("#txtCompanyDesc").val('');
            $("#ddlStatus").val(-1);
        }
        catch (err) {
            console.log(err);
        }
    }

</script>
