@model Aris.Models.ViewModel.Users

@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Styles for modal - to be replaced to new file *@


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Users</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">User Details</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">User  Details	</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->

                    <form role="form" id="userForm">

                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="txtUserName">User Name</label>
                                        <input type="text" class="form-control" id="txtUserName" placeholder="User Name">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">User Full Name</label>
                                        <input type="text" class="form-control" id="txtUserFullName" placeholder="User Full Name">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">User Email </label>
                                        <input type="email" class="form-control" id="txtUserEmail" placeholder="Email Address">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Access Type</label>
                                        <select class="form-control select2bs4" id="ddlUserType" style="width: 100%;">

                                            <option value="1">Adminstrator</option>
                                            <option value="2">Manager</option>
                                            <option value="3">Report Viewer</option>

                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Status</label>
                                        <select class="form-control select2bs4" id="ddlStatus" style="width: 100%;">
                                            <option value="0">Disable</option>
                                            <option value="1">Active</option>

                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-4">

                                    <label for="formFileLg" class="form-label">User Image</label>
                                    <input class="form-control form-control" id="userPhoto" type="file" />
                                    <span id="file_error"></span>
                                </div>

                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" id="btnDelete" class="btn btn-danger btn-sm">Delete</button>
                            <button type="submit" id="btnReset" class="btn btn-primary btn-sm">Reset</button>
                            <button type="submit" id="btnUpdate" onclick="UpdateUser()" class="btn btn-warning btn-sm">Update</button>
                            <button type="submit" id="btnSubmit" onclick="SubmitRequest()" class="btn btn-success btn-sm">Submit</button>
                        </div>
                    </form>

                </div>


            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-12">

                <!-- general form elements disabled -->
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">User List</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form role="form">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card-body table-responsive p-0">
                                        <table class="table table-head-fixed text-nowrap" id="tblUsers">
                                            @*<thead>
                                                    <tr>
                                                        <th>User Name</th>
                                                        <th>User Email</th>
                                                        <th>Access Type</th>
                                                        <th>Status</th>
                                                        <th>View</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>User One</td>
                                                        <td>UserOne@gmail.com</td>
                                                        <td>Administrator</td>
                                                        <td> Acative</td>
                                                        <td><a href="#"> View</a></td>
                                                    </tr>

                                                </tbody>*@
                                        </table>
                                    </div>
                                </div>

                            </div>


                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>






            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
<script src="~/js/Common/Common.js" type="text/javascript"></script>

<script>
    var userId;
    $(document).ready(function () {
        
        GetUsers();

        $("#userPhoto").change(function () {
            $("#file_error").html("");
            var file_size = $('#userPhoto')[0].files[0].size;
            if (file_size > 300000) {
                $("#file_error").html("<p style='color:#FF0000'>File size is greater than 300kb</p>");

                return false;
            }
            return true;
        });
    });

    function SubmitRequest() {
        var userName = $("#txtUserName").val();
        var emailAddress = $("#txtUserEmail").val();
        var userType = $("#ddlUserType option:selected").val();
        var isActive = $("#ddlStatus option:selected").val();
        var fullName = $("#txtUserFullName").val();
        var data = {
            UserName: userName,
            MailAddress: emailAddress,
            UserTypeID: userType,
            IsActive: isActive,
            FullName: fullName
        };
        callAjax('POST', '/MasterPages/ManageUsers/SubmitRequest', data);
        GetUsers();
    }

    $('#tblUsers').on('click', 'td.edit', function (e) {
        e.preventDefault();
        $("#txtUserName").val(table.row(this).data()['userName']).attr('readonly', 'true');
        $("#txtUserFullName").val(table.row(this).data()['fullName']);
        $("#txtUserEmail").val(table.row(this).data()['mailAddress']);

        if (table.row(this).data()['isActive'] == 1) {
            $("#ddlStatus").val(1);
        }
        else {
            $("#ddlStatus").val(0);
        }
        $("#ddlUserType").val(table.row(this).data()['userTypeID']);
        userId = table.row(this).data()['userId'];

        $("#btnUpdate").show();
        $("#btnSubmit").hide();
    });

    function GetUsers() {
        $.ajax({
            type: "GET",
            url: "/MasterPages/ManageUsers/GetUsers",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                if (response != null) {
                    populateUsers(response);
                } else {
                    alert("Something went wrong");
                }
            },
            failure: function (response) {
                alert(response.responseText);
            },
            error: function (response) {
                alert(response.responseText);
            }
        });
    }

    function UpdateUser() {
        try {
            var userName = $("#txtUserName").val();
            var userFullName = $("#txtUserFullName").val();
            var Useremail = $("#txtUserEmail").val();
            var isActive = $("#ddlStatus option:selected").val();
            var userTypeId = $("#ddlUserType option:selected").val();

            alert(userId);
            var data = {
                UserName: userName,
                FullName: userFullName ,
                MailAddress: Useremail,
                IsActive: isActive,
                UserTypeID: userTypeId,
                UserId:userId
            };
            var status = callAjax('POST', '/MasterPages/ManageUsers/UpdateUser', data);
            console.log('status - ' + status);
            GetUsers();
        }
        catch (err) {
            console.log(err);
        }
    }

    function populateUsers(response) {
        table = $('#tblUsers').DataTable(
            {
                bLengthChange: true,
                bFilter: true,
                bSort: true,
                bPaginate: true,
                data: response,
                scrollY: false,
                select: true,
                pageLength: 5,
                columns: [
                    {
                        data: 'userId', title: 'User Id', visible: false,
                    },
                    {
                        data: 'userName', title: 'User Name'
                    },
                    {
                        data: 'fullName', title: 'Full Name'
                    },
                    {
                        data: 'mailAddress', title: 'User Email'
                    },
                    {
                        data: 'isActive', title: 'Status',
                        render: function (data) {
                            if (data == 1) {
                                return 'Active';
                            }
                            else {
                                return 'Inactive';
                            }
                        }

                    },
                    {
                        data: null,
                        title: 'View',
                        class: 'edit',
                        defaultContent: '<button type="button" class="btn btn-success"><i class="fas fa-edit"></i></button>',
                        orderable: false
                    }
                ]
            });

    }
</script>
