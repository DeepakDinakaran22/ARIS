
@{
    ViewData["Title"] = "Salary details ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@* Common - calendar *@
<link rel="stylesheet" href="~/css/jquery-ui.css">
<link rel="stylesheet" href="~/plugins/loader/css/style.css" />
@* Confirm Box *@
<link rel="stylesheet" href="~/plugins/confirmBox/jquery-confirm.css" />
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Manage Salary Details </h1>

            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="">Home</a></li>
                    <li class="breadcrumb-item active">Manage Salary Details</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
       
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            <span><i class="fa fa-chec "></i>Details</span>
                           

                        </h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->

                    <form role="form" id="companyForm">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="EmployeeNumber">Employee Number</label>
                                        <input type="number" class="form-control" id="txtEmployeeNumber" placeholder="Employee Number">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="txtEmployeeName">Employee Name </label>
                                        <input type="text" class="form-control" id="txtEmployeeName" placeholder="Enter Name">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Joining Date <span class="text-red text-bold">*</span></label>
                                        <input type="text" class="form-control date" id="dpDocJoiningDate" placeholder="Select Joining Date">

                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Bank Account Number <span class="text-red text-bold">*</span></label>
                                        <input type="number" class="form-control date" id="txtBankAccountNumber" placeholder="Bank Account Number">

                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="card-footer" style="text-align:right">
                            <button type="reset" id="btnReset" class="btn btn-sm btn-primary">Reset</button>
                            <button type="button" id="btnSubmit" onclick="GetEmployeesSalaryBySearch()" class="btn btn-sm btn-success">Search</button>
                        </div>

                    </form>

                </div>
            </div>
            <div class="col-md-8">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Allowances</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="txtOvertime">Overtime/Extra Time</label>
                                    <input type="number" class="form-control" id="txtOvertime" placeholder="Overtime/extratime">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="txtTranspotationallowance">Transpotation Allowance</label>
                                    <input type="number" class="form-control" id="txtTranspotationallowance" placeholder="Transpotation Allowance">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="txtFoodallowance">Food Allowance</label>
                                    <input type="number" class="form-control date" id="txtFoodallowance" placeholder="food Allowance">

                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="txtTelephoneallowance">Telephone Allowance</label>
                                    <input type="number" class="form-control" id="txtTelephoneallowance" placeholder="Telephone Allowance">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="txtOtherallowance">Other Allowance</label>
                                    <input type="number" class="form-control" id="txtOtherallowance" placeholder="Other Allowance">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="txtTaxicharges">Taxi Charges</label>
                                    <input type="number" class="form-control date" id="txtTaxicharges" placeholder="Taxi Charges">

                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="txtRoomrent">Room Rent</label>
                                    <input type="number" class="form-control date" id="txtRoomrent" placeholder="Room Rent">

                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="txtServiceBenefits">Service Benefits</label>
                                    <input type="text" class="form-control date" id="txtServiceBenefits" placeholder="Service Benefits">

                                </div>
                            </div>


                        </div>


                    </div>
                </div>

            </div>

            <div class="col-md-4">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Deduction</h3>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="socialInsurance"> Social Insurance 7%  </label>
                                    <input type="number" class="form-control" id="txtSocialInsurance" placeholder="Social Insurance">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="txtleaveDeductions">Leave  Deductions</label>
                                    <input type="text" class="form-control" id="txtLeaveDeductions" placeholder="Leave  Deductions">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="advanceDeductions">Advance Deductions</label>
                                    <input type="text" class="form-control date" id="txtAdvanceDeductions" placeholder="Advance Deductions">

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="otherDeductions">Other Deductions</label>
                                    <input type="text" class="form-control date" id="txtOtherDeductions" placeholder="Other Deductions">

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="card card-dark">
                    <div class="card-header" style="text-align : center">
                        <h3 class="card-title">Totals</h3>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="txtTotalallowance">Total Allowance</label>
                                    <input type="text" class="form-control date" id="txtTotalallowance" placeholder="Total Allowance" readonly>

                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="txtTotalGrossSalary">Total Gross Salary</label>
                                    <input type="number" class="form-control" id="txtTotalGrossSalary" placeholder="Total Gross Salary" readonly>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="txtTotalDeductions">Total Deductions</label>
                                    <input type="text" class="form-control date" id="txtTotalDeductions" placeholder="Total Deductions" readonly>

                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="txtNet Salary">Net Salary [RO] </label>
                                    <input type="text" class="form-control date" id="txtNetSalary" placeholder="Net Salary [RO]" readonly>

                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="txtTotalSalaryPayment">Total Salary Payment</label>
                                    <input type="text" class="form-control date" id="txtTotalSalaryPayment" placeholder="Total Salary Payment" readonly>

                                </div>
                            </div>


                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="txtRemarks">Remarks </label>
                    <textarea class="form-control" rows="2" id="txtRemarks"></textarea>
                </div>
            </div>
            <div class="col-md-12 text-right">
                <div class="right">
                    <button type="button" id="btnReset" class="btn btn-sm btn-warning"><i class="fa fa-recycle"></i>  Reset</button>
                    <button type="button" id="btnSubmit" class="btn btn-sm btn-success"><i class="fas fa-check"></i>  Submit</button>
                    <button type="button" id="btnApprove" class="btn btn-sm btn-dark"><i class="fa fa-check"></i>  Approve</button>
                    <button type="button" id="btnReject" class="btn btn-sm btn-danger"><i class="fa fa-times"></i>  Reject</button>
                    <button type="button" id="btnPrint" class="btn btn-sm btn-primary"><i class="fa fa-print"></i>  Print</button>


                </div>
            </div>






            <!-- /.card-body -->


        </div>


                </div>

                <!-- /.row -->
                <!-- /.container-fluid -->
</section>
@* Message Modal *@
<div class="modal fade" id="alert-modal">
    <div class="modal-dialog">
        <div class="modal-content alert-success">
            <div class="modal-header">
                <h4 class="modal-title">Success Modal</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p></p>
            </div>
            <div class="modal-footer justify-content">
                <button type="button" class="btn btn-outline-light" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<div class="modal fade bd-loader-modal-lg" data-backdrop="static" data-keyboard="false" id="modal-Loader" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" style="width: 48px">
            <span class="fa fa-spinner fa-spin fa-3x"></span>
        </div>
    </div>
</div>


@* loader *@
<div class="overlay"></div>
@* Common files Starts*@
<script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
<link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
<link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.css">
<script src="~/js/Common/Common.js" type="text/javascript"></script>
<script src="~/js/jquery-ui.js" type="text/javascript"></script>
<script src="~/plugins/bootstrap/js/bootstrap.min.js" type="text/x-jsrender">
</script>
@* Common files ends *@
@* Solution Specific files starts *@
<script src="~/js/App/Salary.js" type="text/javascript"></script>
<script src="~/plugins/countrypicker/js/jquery.countrySelector.js" type="text/javascript"></script>
@* ConfirmBox *@
<script src="~/plugins/confirmBox/jquery-confirm.js" type="text/javascript"></script>



@* hidden Variables *@
<input type="hidden" id="hdnUserRole" value="@TempData.Peek("UserRole")" />
<input type="hidden" id="hdnUserId" value="@TempData.Peek("UserId")" />

