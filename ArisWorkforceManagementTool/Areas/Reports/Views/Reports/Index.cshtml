
@{
    ViewData["Title"] = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/jquery-ui.css">
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Employee Details Report</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Employee Reports</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Employee Reports	</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->

                    <form role="form">

                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="EmployeeNumber">Employee Number</label>
                                        <input type="number" class="form-control" id="txtEmployeeNumber" placeholder="Employee Number">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="txtEmployeeName">Employee Name </label>
                                        <input type="text" class="form-control" id="txtEmployeeName" placeholder="Enter Name">
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Client</label>
                                        <select class="form-control select2bs4" id="ddlCompany" style="width: 100%;">
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Nationality</label>
                                        <select id="ddlCountry" class="form-control select2bs4" value="0" data-role="country-selector" data-code-mode="numeric"></select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="PassportNumber">Passport Number </label>
                                        <input type="text" class="form-control" id="txtPassportNumber" placeholder="Enter Passport Number">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Passport Expiry From</label>
                                        <input type="text" class="form-control date" id="dpPassportExpiryFrom">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Passport Expiry To</label>
                                        <input type="text" class="form-control date" id="dpPassportExpiryTo">
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="ResidentNumber">Resident Number </label>
                                        <input type="text" class="form-control" id="txtResidentNumber" placeholder="Enter Resident No">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Resident Expiry From</label>
                                        <input type="text" class="form-control date" id="dpResidentExpiryFrom">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Resident Expiry To</label>
                                        <input type="text" class="form-control date" id="dpResidentExpiryTo">
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Joining Date From</label>
                                        <input type="text" class="form-control date" id="dpJoiningDateFrom">

                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Joining Date To</label>
                                        <input type="text" class="form-control date" id="dpJoiningDateTo">

                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Contract Start Date</label>
                                        <input type="text" class="form-control date" id="dpContractStartDate">

                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Contract End Date</label>
                                        <input type="text" class="form-control date" id="dpContractEndDate">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer" style="text-align:right">
                            <button type="reset" id="btnReset" class="btn btn-primary">Reset</button>
                            <button type="button" id="btnSubmit" onclick="SearchRequest()" class="btn btn-success">Search</button>
                        </div>
                    </form>

                </div>


            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-12">

                <!-- general form elements disabled -->
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Employee List</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form role="form">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card-body table-responsive p-0" style="overflow:hidden">
                                        <table class="table table-head-fixed text-nowrap" id="tblEmployees"> </table>
                                    </div>
                                </div>

                            </div>


                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
@* Common files Starts*@
<script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
<link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
<link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.css">

<script src="~/js/Common/Common.js" type="text/javascript"></script>

<script src="~/js/jquery-ui.js" type="text/javascript"></script>
<script src="~/plugins/bootstrap/js/bootstrap.min.js" type="text/x-jsrender">
</script>
@* Common files ends *@
@* Solution Specific files starts *@
<script src="~/js/App/Reports.js" type="text/javascript"></script>
<script src="~/plugins/countrypicker/js/jquery.countrySelector.js" type="text/javascript"></script>
@* Solution Specific files ends *@
<script>

    $(document).ready(function () {
        SearchText();
    });
    function SearchText() {
        $("#txtEmployeeName").autocomplete({
            source: function (request, response) {
                $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    url: "Reports/Reports/AutoComplete",
                    data: "{'prefix':'" + $('#txtEmployeeName').val() + "'}",
                    dataType: "json",
                    success: function (data) {
                        response(data.d);
                    },
                    error: function (result) {
                        alert("No Match");
                    }
                });
            }
        });
    }
</script>