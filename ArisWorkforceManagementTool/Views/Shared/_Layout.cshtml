    @* change password *@
    <div class="modal fade" id="modal-password" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content alert-light" style="width:350px">
                <div class="modal-header" style="background-color:darkseagreen">
                    <h4 class="modal-title left">Change Password</h4>
                    <button type="button" class="close" style="color:darkred" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12 ">
                            <div class="col-md-12">
                                <form class="password-strength form p-4">
                                    <div class="form-group">
                                        <label for="Oldpassword-input">Current Password</label>
                                        <div class="input-group">
                                            <input class="Oldpassword-strength__input form-control" type="password" id="Oldpassword-input" aria-describedby="passwordHelp" placeholder="Enter current password" />
                                        </div>
                                        <small class="password-strength__error text-danger js-hidden" id="incorrectPwd">Incorrect Password</small>

                                    </div>
                                    <div class="form-group">
                                        <label for="password-input">New Password</label>
                                        <div class="input-group">
                                            <input class="password-strength__input form-control" type="password" id="password-input" aria-describedby="passwordHelp" placeholder="Enter password" />
                                            <div class="input-group-append">
                                                <button class="password-strength__visibility btn btn-outline-secondary" type="button"><span class="password-strength__visibility-icon" data-visible="hidden"><i class="fas fa-eye-slash"></i></span><span class="password-strength__visibility-icon js-hidden" data-visible="visible"><i class="fas fa-eye"></i></span></button>
                                            </div>
                                        </div>
                                        <small class="password-strength__error text-danger js-hidden" id="incorrectNewPwd">Shold not use current password as new</small>
                                        <small class="password-strength__error text-danger js-hidden">This symbol is not allowed!</small>
                                        <small class="form-text text-muted mt-2" id="passwordHelp">Add 9 charachters or more, lowercase letters, uppercase letters, numbers and symbols to make the password really strong!</small>
                                    </div>
                                    <div class="password-strength__bar-block progress mb-4">
                                        <div class="password-strength__bar progress-bar bg-danger" id="pbar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    @*<button class="password-strength__submit btn btn-success d-flex m-auto" type="button" disabled="disabled">Submit</button>*@
                                    <div class="form-group">
                                        <label for="password-input">Confirm Password</label>
                                        <div class="input-group">
                                            <input class="Confirmpassword-strength__input form-control" type="password" id="Confirmpassword-input" aria-describedby="passwordHelp" placeholder="Enter new password" />
                                        </div>
                                        <small class="password-strength__error text-danger js-hidden" id="incorrectConfirmPwd">Password mismatch</small>

                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" id="btnResetPassword" onclick="ResetPwd()" class="btn btn-outline-warning">Reset</button>
                    <button type="button" id="btnSavePassword" onclick="SubmitNewPassword()" class="btn btn-outline-success">Save</button>
                </div>
            </div>
        </div>
    </div>

