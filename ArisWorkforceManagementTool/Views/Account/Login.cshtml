@model Aris.Models.ViewModel.UserLoginModel
@{
    Layout = null;
}

<link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/plugins/login/css/materialdesignicons.min.css">
<link rel="stylesheet" href="~/plugins/login/css/bootstrap.min.css">
<link rel="stylesheet" href="~/plugins/login/css/login.css">

<div class="container">
    <div class= "justify-content-center h-100">

        <div class="card login-card">
            <div class="row no-gutters">
                <div class="col-md-5">
                    <img src="~/plugins/login/images/login.jpg" alt="login" class="login-card-img">
                </div>
                <div class="col-md-7">
                    <div class="card-body">
                        <div class="brand-wrapper">
                            <img src="~/plugins/login/images/LogoAris.png" alt="logo" class="logo" style="width:200px;height:150px">
                        </div>

                        <form method="post">
                            <div class="input-group form-group">

                                <label for="email" class="sr-only">Email</label>
                                <input asp-for="UserName" class="form-control" placeholder="User Name">
                                <span asp-validation-for="UserName" class="text-danger"></span>

                            </div>
                            <div class="input-group form-group">

                                <label for="password" class="sr-only">Password</label>
                                <input asp-for="Password" class="form-control" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger">

                                </span>
                                @Html.ValidationMessage("CustomError")
                            </div>
                            <div class="input-group form-group">
                                <input asp-for="RememberMe" style="margin:6px">Remember Me

                            </div>
                            @Html.ValidationMessage("CustomError")

                            <div class="form-group">
                                <button type="submit" class="btn btn-block login-btn mb-4">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <script src="~/plugins/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/plugins/login/js/popper.min.js" type="text/javascript"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
  

